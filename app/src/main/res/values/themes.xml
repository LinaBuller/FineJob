<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FineJob" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="TextForEmptyFragments">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/grey_1</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="CustomButton.Blue" parent="CustomButton">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="CustomButton.Blue.Regular" parent="CustomButton.Blue">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="CustomButton.Blue.Semibold" parent="CustomButton.Blue">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>


    <style name="CustomButton.Green" parent="CustomButton">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="CustomRoundButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">32dp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/grey_2</item>
        <item name="colorControlHighlight">@color/grey_2</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="android:textColorHint">@color/grey_3</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>


    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/grey_3</item>
    </style>

    <style name="CustomBottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
    </style>

</resources>