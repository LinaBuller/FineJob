        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TextTypo.Medium.Medium" parent="TextSize.Medium">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="TextTypo.Large.Semibold" parent="TextSize.Large">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TextTypo.NormalLarge.Semibold" parent="TextSize.NormalLarge">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="CommentText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CommentText.Medium" parent="CommentText">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
